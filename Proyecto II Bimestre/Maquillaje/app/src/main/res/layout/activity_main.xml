<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/uno"
        tools:context=".MainActivity">

    <Button
            android:text="@string/txt_maquillaje"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btn_catalogo"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/btn_compras"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.82"
            android:background="@drawable/round" android:textSize="20sp" android:textColor="#F5E9E3E3"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/text_titulo"
    />
    <Button
            android:text="@string/txt_compra"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btn_compras" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="3dp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_clientes" app:layout_constraintHorizontal_bias="0.804"
            android:background="@drawable/round" android:textSize="20sp" android:textColor="#F5E9E3E3"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/btn_catalogo"/>
    <Button
            android:text="@string/txt_cliente"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btn_clientes"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="3dp"
            app:layout_constraintHorizontal_bias="0.787"
            android:background="@drawable/round" android:textSize="20sp" android:textColor="#F5E9E3E3"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/btn_compras"/>

    <ImageView
            android:layout_width="126dp"
            android:layout_height="76dp" app:srcCompat="@drawable/maquillaje"
            android:id="@+id/imageView2" android:layout_marginTop="30dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="CATÁLOGO MAQUILLAJE"
            android:layout_width="242dp"
            android:layout_height="30dp"
            android:id="@+id/text_titulo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:textSize="18sp" android:textColor="@android:color/white"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.504"/>
    <ImageView
            android:layout_width="101dp"
            android:layout_height="98dp" app:srcCompat="@drawable/ver" android:id="@+id/imageView5"
            app:layout_constraintEnd_toStartOf="@+id/btn_clientes"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_clientes" app:layout_constraintHorizontal_bias="0.522"
            app:layout_constraintTop_toTopOf="@+id/btn_clientes"/>
    <ImageView
            android:layout_width="126dp"
            android:layout_height="98dp" app:srcCompat="@drawable/anadircaompra"
            android:id="@+id/imageView6" app:layout_constraintEnd_toStartOf="@+id/btn_compras"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn_compras" app:layout_constraintHorizontal_bias="0.462"
            app:layout_constraintBottom_toBottomOf="@+id/btn_compras" app:layout_constraintVertical_bias="0.473"/>
    <ImageView
            android:layout_width="118dp"
            android:layout_height="98dp" app:srcCompat="@drawable/brush"
            android:id="@+id/imageView9" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_titulo" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView6" app:layout_constraintEnd_toStartOf="@+id/btn_catalogo"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>