<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/uno"
        android:id="@+id/constraintLayout2">

    <Button
            android:text="Actualizar Producto"
            android:layout_width="403dp"
            android:layout_height="41dp"
            android:id="@+id/btn_actualizarProducto"
            android:textColor="@android:color/white"
            android:textSize="30sp" android:textAlignment="center"
            android:textAllCaps="false" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            android:background="@drawable/round2"
            app:layout_constraintTop_toTopOf="@+id/text_titulo" app:layout_constraintHorizontal_bias="0.118"
    />
    <ImageView
            android:layout_width="110dp"
            android:layout_height="66dp" app:srcCompat="@drawable/maquillaje"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="CATÁLOGO MAQUILLAJE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_titulo"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/white"/>

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="349dp"
            android:layout_height="373dp"
            android:background="@drawable/round"
            app:layout_constraintTop_toBottomOf="@+id/btn_actualizarProducto"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
    >

        <TextView
                android:text="@string/id_zapato"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/text_id" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="#F5E9E3E3" android:textStyle="bold|italic" android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/txt_act_col_pro"
                app:layout_constraintEnd_toStartOf="@+id/txt_act_id_pro"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="12dp"
                android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="@string/color_producto"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/text_color" app:layout_constraintStart_toStartOf="parent"
                android:textColor="#F5E9E3E3" android:textStyle="bold|italic"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/text_id"
                app:layout_constraintEnd_toStartOf="@+id/txt_act_col_pro"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintBottom_toTopOf="@+id/text_marca" android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
        <TextView
                android:text="@string/tipo_producto"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/text_tipo"
                android:textColor="#F5E9E3E3" android:textStyle="bold|italic" android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/text_marca"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt_act_tip_pro"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" app:layout_constraintBottom_toTopOf="@+id/text_desc"
                android:layout_marginTop="12dp" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="@string/nombre_producto"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/text_desc" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:textColor="#F5E9E3E3" android:textStyle="bold|italic" android:textSize="24sp"
                tools:ignore="UnknownId"
                app:layout_constraintTop_toBottomOf="@+id/text_tipo"
                app:layout_constraintEnd_toStartOf="@+id/txt_act_exi_pro" android:layout_marginEnd="10dp"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="12dp"
                app:layout_constraintBottom_toTopOf="@+id/text_precio" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="@string/cantidad_producto"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/text_cantidad" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:textColor="#F5E9E3E3"
                android:textStyle="bold|italic"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/text_precio"
                app:layout_constraintEnd_toStartOf="@+id/txt_act_can_pro" android:layout_marginEnd="10dp"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="12dp" android:layout_marginBottom="43dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="@string/precio_producto"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/text_precio" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:textColor="#F5E9E3E3" android:textStyle="bold|italic" android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/text_desc"
                android:layout_marginTop="12dp"
        />
        <TextView
                android:text="@string/marca_producto"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/text_marca" app:layout_constraintStart_toStartOf="parent"
                android:textColor="#F5E9E3E3" android:textStyle="bold|italic"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/text_color"
                app:layout_constraintEnd_toStartOf="@+id/txt_act_mar_pro"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="15dp"
                android:layout_marginStart="10dp" app:layout_constraintBottom_toTopOf="@+id/text_tipo"
                android:layout_marginEnd="10dp" android:layout_marginBottom="5dp"/>
        <TextView
                android:layout_width="180dp"
                android:layout_height="37dp"
                android:id="@+id/txt_act_id_pro"
                android:background="@drawable/round1" android:textColor="@color/colorTextoCampos"
                android:textSize="24sp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_id"
                app:layout_constraintBottom_toBottomOf="@+id/text_id"
                app:layout_constraintStart_toEndOf="@+id/text_id" android:layout_marginStart="8dp"
        />
        <EditText
                android:layout_width="180dp"
                android:layout_height="37dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_act_can_pro"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/text_cantidad"
                app:layout_constraintTop_toTopOf="@+id/text_cantidad"
                android:background="@drawable/round1"
                app:layout_constraintStart_toEndOf="@+id/text_cantidad" android:layout_marginStart="8dp"
                app:layout_constraintVertical_bias="0.26"/>
        <EditText
                android:layout_width="180dp"
                android:layout_height="37dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_precio"
                app:layout_constraintBottom_toBottomOf="@+id/text_precio" android:background="@drawable/round1"
                app:layout_constraintStart_toEndOf="@+id/text_precio" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="1.0" android:id="@+id/txt_act_pre_pro"/>
        <EditText
                android:layout_width="180dp"
                android:layout_height="37dp"
                android:inputType="textPersonName"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:id="@+id/txt_act_exi_pro"
                app:layout_constraintBottom_toBottomOf="@+id/text_desc"
                app:layout_constraintTop_toTopOf="@+id/text_desc" android:background="@drawable/round1"
                app:layout_constraintStart_toEndOf="@+id/text_desc" android:layout_marginStart="8dp"/>
        <EditText
                android:layout_width="180dp"
                android:layout_height="37dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_act_tip_pro"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/text_tipo"
                app:layout_constraintBottom_toBottomOf="@+id/text_tipo" android:background="@drawable/round1"
                app:layout_constraintStart_toEndOf="@+id/text_tipo" android:layout_marginStart="8dp"
        />
        <EditText
                android:layout_width="180dp"
                android:layout_height="37dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_act_col_pro"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_color"
                app:layout_constraintBottom_toBottomOf="@+id/text_color" android:background="@drawable/round1"
                app:layout_constraintStart_toEndOf="@+id/text_color" android:layout_marginStart="8dp"/>
        <EditText
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_act_mar_pro"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toTopOf="@+id/text_marca"
                app:layout_constraintBottom_toBottomOf="@+id/text_marca"
                android:background="@drawable/round1" app:layout_constraintStart_toEndOf="@+id/text_marca"/>
        <Button
                android:text="@string/actualizar"
                android:layout_width="127dp"
                android:layout_height="29dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/btn_act_zap"
                android:background="@color/colorBotones" android:textColor="@color/colorTextoBotones"
                app:layout_constraintHorizontal_bias="0.423" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="340dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>