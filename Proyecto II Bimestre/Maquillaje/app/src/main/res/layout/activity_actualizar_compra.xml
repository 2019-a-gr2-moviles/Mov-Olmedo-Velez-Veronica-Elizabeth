<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modulo_compras.ActualizarCompra" android:background="@drawable/uno"
        android:id="@+id/ConstraintLayout">

    <Button
            android:text="Actualizar Compra"
            android:layout_width="362dp"
            android:layout_height="47dp"
            android:id="@+id/btn_actualizarProducto"
            android:textColor="@android:color/white"
            android:textSize="30sp" android:textAlignment="center"
            android:textAllCaps="false" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            android:background="@drawable/round2"
            app:layout_constraintTop_toTopOf="@+id/text_titulo" app:layout_constraintHorizontal_bias="0.4"
    />
    <ImageView
            android:layout_width="116dp"
            android:layout_height="74dp" app:srcCompat="@drawable/maquillaje"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="CATÁLOGO MAQUILLAJE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_titulo"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/white"/>

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="352dp"
            android:layout_height="323dp"
            android:background="@drawable/round" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_actualizarProducto"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">


    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>