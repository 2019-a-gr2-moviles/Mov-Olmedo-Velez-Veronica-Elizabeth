<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".modulo_clientes.ActualizarCliente" android:background="@drawable/uno"
        android:id="@+id/ConstraintLayout">

    <Button
            android:text="Actualizar Cliente"
            android:layout_width="365dp"
            android:layout_height="41dp"
            android:id="@+id/btn_actualizarProducto"
            android:textColor="@android:color/white"
            android:textSize="30sp" android:textAlignment="center"
            android:textAllCaps="false" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            android:background="@drawable/round2"
            app:layout_constraintTop_toTopOf="@+id/text_titulo" app:layout_constraintHorizontal_bias="0.4"
    />
    <ImageView
            android:layout_width="116dp"
            android:layout_height="74dp" app:srcCompat="@drawable/maquillaje"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="CATÃLOGO MAQUILLAJE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_titulo"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/white"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="348dp"
            android:layout_height="356dp"
            android:id="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/btn_actualizarProducto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            android:background="@drawable/round">

        <TextView
                android:text="@string/nombre_cliente"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/textView15" android:textSize="25sp"
                android:textColor="#F5E9E3E3" android:textStyle="bold|italic"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView20" android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/txt_act_nom_cli"
                app:layout_constraintBottom_toTopOf="@+id/textView18"
                app:layout_constraintHorizontal_bias="0.46"
        />
        <ImageView
                android:layout_width="93dp"
                android:layout_height="61dp" app:srcCompat="@drawable/client"
                android:id="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.051"/>
        <TextView
                android:text="@string/apellido_cliente"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/textView18" android:textSize="25sp"
                android:textColor="#F5E9E3E3"
                android:textStyle="bold|italic"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView15" android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/txt_act_ape_cli"
                app:layout_constraintBottom_toTopOf="@+id/textView19" app:layout_constraintHorizontal_bias="0.52"
        />
        <TextView
                android:text="@string/id_cliente"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:id="@+id/txt_act_id_cli"
                android:textSize="25sp"
                android:textColor="@color/colorTextoCampos"
                app:layout_constraintTop_toTopOf="@+id/textView20"
                app:layout_constraintBottom_toBottomOf="@+id/textView20" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintVertical_bias="0.48000002"
                android:background="@drawable/round1" android:textStyle="italic" android:textAlignment="textStart"/>
        <Button
                android:text="@string/actualizar"
                android:layout_width="138dp"
                android:layout_height="43dp"
                android:id="@+id/btn_eje_act_cli"
                android:textColor="@color/colorTextoBotones"
                android:backgroundTint="@color/colorBotones"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.787"
                android:background="@drawable/round2" android:textSize="18sp" android:textAllCaps="true"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_act_nom_cli"
                android:hint="@string/nombre_cliente" android:textSize="20sp"
                android:textColor="@color/colorTextoCampos"
                app:layout_constraintTop_toTopOf="@+id/textView15"
                app:layout_constraintBottom_toBottomOf="@+id/textView15"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_width="210dp"
                app:layout_constraintVertical_bias="0.35"
                android:background="@drawable/round1" android:textAlignment="textStart"/>
        <TextView
                android:text="@string/id_cliente"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/textView20" android:textSize="25sp"
                android:textColor="#F5E9E3E3"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/txt_act_id_cli"
                app:layout_constraintBottom_toTopOf="@+id/textView15"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
                android:textStyle="bold|italic"
        />
        <EditText
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_act_ape_cli"
                android:hint="@string/apellido_cliente" android:textSize="20sp"
                android:textColor="@color/colorTextoCampos"
                app:layout_constraintBottom_toBottomOf="@+id/textView18"
                app:layout_constraintTop_toTopOf="@+id/textView18" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.51"
                android:background="@drawable/round1"/>
        <EditText
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_act_ced_cli"
                android:hint="@string/cedula_cliente" android:textSize="20sp"
                android:textColor="@color/colorTextoCampos"
                app:layout_constraintBottom_toBottomOf="@+id/textView19" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/textView19" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/round1"/>
        <TextView
                android:text="@string/cedula_cliente"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/textView19" android:textSize="25sp"
                android:textColor="#F5E9E3E3"
                android:textStyle="bold|italic"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                app:layout_constraintEnd_toStartOf="@+id/txt_act_ced_cli" android:layout_marginEnd="8dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>