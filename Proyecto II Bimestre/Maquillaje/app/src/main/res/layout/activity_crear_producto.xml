<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/uno"
        android:id="@+id/constraintLayout2">

    <Button
            android:text="Registrar Producto"
            android:layout_width="359dp"
            android:layout_height="48dp"
            android:id="@+id/btn_actualizarProducto"
            android:textColor="@android:color/white"
            android:textSize="30sp" android:textAlignment="center"
            android:textAllCaps="false" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            android:background="@drawable/round2"
            app:layout_constraintTop_toTopOf="@+id/text_titulo" app:layout_constraintHorizontal_bias="0.4"
    />
    <ImageView
            android:layout_width="105dp"
            android:layout_height="63dp" app:srcCompat="@drawable/maquillaje"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="CATÃLOGO MAQUILLAJE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_titulo"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/white"/>

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="347dp"
            android:layout_height="343dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_titulo" android:layout_marginTop="64dp"
            android:background="@drawable/round" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.47">

        <TextView
                android:text="@string/color_producto"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:id="@+id/text_color" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:textColor="#F5E9E3E3" android:textStyle="bold|italic"
                android:textSize="24sp"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/text_marca"
                app:layout_constraintBottom_toTopOf="@+id/text_tipo"/>
        <TextView
                android:text="@string/tipo_producto"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:id="@+id/text_tipo" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:textColor="#F5E9E3E3" android:textStyle="bold|italic" android:textSize="24sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/text_color"
                app:layout_constraintBottom_toTopOf="@+id/text_desc"/>
        <TextView
                android:text="@string/nombre_producto"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:id="@+id/text_desc" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:textColor="#F5E9E3E3" android:textStyle="bold|italic" android:textSize="24sp"
                tools:ignore="UnknownId"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/text_tipo"
        />
        <TextView
                android:text="@string/precio_producto"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:id="@+id/text_cantidad" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="84dp"
                android:textColor="#F5E9E3E3"
                android:textStyle="bold|italic"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/text_precio" app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="@string/cantidad_producto"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:id="@+id/text_precio" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:textColor="#F5E9E3E3" android:textStyle="bold|italic" android:textSize="24sp"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/text_desc"/>
        <TextView
                android:text="@string/marca_producto"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:id="@+id/text_marca" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="parent"
                android:textColor="#F5E9E3E3" android:textStyle="bold|italic"
                android:textSize="24sp"
                android:layout_marginTop="10dp"/>
        <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_ing_pre_pro"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/round1"
                app:layout_constraintBottom_toBottomOf="@+id/text_cantidad"
                app:layout_constraintTop_toTopOf="@+id/text_cantidad"
                app:layout_constraintStart_toEndOf="@+id/text_cantidad" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="1.0"/>
        <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_ing_can_pro"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_precio"
                android:background="@drawable/round1"
                app:layout_constraintBottom_toBottomOf="@+id/text_precio"
                app:layout_constraintStart_toEndOf="@+id/text_precio" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.97"/>
        <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:id="@+id/txt_ing_exi_pro"
                app:layout_constraintTop_toTopOf="@+id/text_desc"
                app:layout_constraintBottom_toBottomOf="@+id/text_desc"
                app:layout_constraintStart_toEndOf="@+id/text_desc"
                app:layout_constraintHorizontal_bias="1.0" android:background="@drawable/round1"/>
        <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_ing_tip_pro"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/text_tipo"
                app:layout_constraintBottom_toBottomOf="@+id/text_tipo"
                app:layout_constraintStart_toEndOf="@+id/text_tipo" app:layout_constraintHorizontal_bias="1.0"
                android:background="@drawable/round1"/>
        <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_ing_col_pro"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toTopOf="@+id/text_color"
                app:layout_constraintBottom_toBottomOf="@+id/text_color"
                app:layout_constraintStart_toEndOf="@+id/text_color" android:background="@drawable/round1"/>
        <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_ing_mar_pro"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/text_marca"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/text_marca"
                app:layout_constraintStart_toEndOf="@+id/text_marca" app:layout_constraintHorizontal_bias="1.0"
                android:background="@drawable/round1"/>
        <Button
                android:text="@string/insertar"
                android:layout_width="111dp"
                android:layout_height="33dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/btn_ing_product" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.404" app:layout_constraintVertical_bias="1.0"
                android:background="@drawable/round2" android:textColor="@color/colorTextoBotones"
                android:textSize="18sp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>