<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modulo_clientes.CrearCliente" android:background="@drawable/uno"
        android:id="@+id/ConstraintLayout">

    <Button
            android:text="Registrar Cliente"
            android:layout_width="358dp"
            android:layout_height="44dp"
            android:id="@+id/btn_actualizarProducto"
            android:textColor="@android:color/white"
            android:textSize="30sp" android:textAlignment="center"
            android:textAllCaps="false" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            android:background="@drawable/round2"
            app:layout_constraintTop_toTopOf="@+id/text_titulo" app:layout_constraintHorizontal_bias="0.4"
    />
    <ImageView
            android:layout_width="116dp"
            android:layout_height="74dp" app:srcCompat="@drawable/maquillaje"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="CATÃLOGO MAQUILLAJE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_titulo"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/white"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="347dp"
            android:layout_height="341dp"
            tools:context=".modulo_clientes.CrearCliente"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_actualizarProducto"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/round">
        <TextView
                android:text="@string/nombre_cliente"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/textView4" android:textSize="25sp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView7" app:layout_constraintVertical_bias="1.0"
                android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:textColor="#F5E9E3E3"
                android:textStyle="bold|italic" android:layout_marginTop="200dp"/>
        <TextView
                android:text="@string/apellido_cliente"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/textView7" android:textSize="25sp"
                android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/textView8"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:textColor="#F5E9E3E3"
                android:textStyle="bold|italic" android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"/>
        <TextView
                android:text="@string/cedula_cliente"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/textView8" android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:textColor="#F5E9E3E3"
                android:textStyle="bold|italic" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.748"/>
        <EditText
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_acc_nom_cli"
                app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView7"
                android:hint="@string/nombre_cliente" android:textSize="20sp"
                android:textColor="@color/colorTextoCampos" app:layout_constraintTop_toTopOf="@+id/textView4"
                android:background="@drawable/round1"/>
        <EditText
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_acc_ape_cli"
                app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginBottom="48dp" android:hint="@string/apellido_cliente" android:textSize="20sp"
                android:textColor="@color/colorTextoCampos"
                app:layout_constraintTop_toTopOf="@+id/textView7"
                app:layout_constraintBottom_toBottomOf="@+id/textView7" app:layout_constraintVertical_bias="0.0"
                android:background="@drawable/round1"/>
        <EditText
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_acc_ced_cli"
                app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0" android:hint="@string/cedula_cliente"
                android:textSize="20sp"
                android:textColor="@color/colorTextoCampos"
                app:layout_constraintBottom_toBottomOf="@+id/textView8" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/textView8" android:background="@drawable/round1"/>
        <Button
                android:layout_width="138dp"
                android:layout_height="49dp"
                android:id="@+id/btn_acc_ing_cli"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:text="@string/insertar"
                android:backgroundTint="@color/colorBotones" android:textColor="@color/colorTextoBotones"
                app:layout_constraintHorizontal_bias="0.412" android:background="@drawable/round2"
                android:textSize="18sp"/>
        <ImageView
                android:layout_width="112dp"
                android:layout_height="81dp" app:srcCompat="@drawable/client"
                android:id="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.038"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>