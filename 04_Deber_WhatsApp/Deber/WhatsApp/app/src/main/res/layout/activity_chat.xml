<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".ChatActivity"
        android:layout_marginTop="10dp" android:id="@+id/recicler_view_usuario" android:background="@drawable/pluma">

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_profile_image"
            android:layout_width="56dp"
            android:layout_height="47dp"
            android:src="@drawable/a1"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000" android:layout_marginBottom="22dp" android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_nombre_usuario_chat"
            android:layout_toEndOf="@+id/img_profile_image"
            android:layout_toRightOf="@+id/img_profile_image" android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="173dp" android:layout_marginEnd="173dp" android:layout_marginTop="11dp"
            android:layout_alignParentTop="true" android:textColor="@android:color/background_dark"
            android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="258dp"
            android:layout_height="22dp" android:id="@+id/txt_mensaje" android:layout_marginTop="5dp"
            android:layout_below="@+id/txt_nombre_usuario_chat" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="71dp" android:layout_marginEnd="71dp"
            android:layout_toEndOf="@+id/img_profile_image" android:layout_toRightOf="@+id/img_profile_image"
            android:layout_marginLeft="6dp" android:layout_marginStart="6dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="375dp"
            android:layout_height="wrap_content" android:layout_marginTop="78dp" android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="46dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="22dp" android:layout_marginEnd="22dp" android:layout_alignParentStart="true"
            android:layout_marginLeft="13dp" android:layout_marginStart="13dp" android:layout_alignParentLeft="true"
            android:id="@+id/recicler_view_chats"/>


</RelativeLayout>