<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_whatsapp"
                android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_profile_image"
            android:layout_width="59dp"
            android:layout_height="52dp"
            android:src="@drawable/a1"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"
            android:layout_alignParentStart="true" android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            android:layout_alignParentLeft="true" android:layout_marginTop="8dp" android:layout_alignParentTop="true"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_nombre_usuario_chat"
            android:layout_toEndOf="@+id/img_profile_image"
            android:layout_toRightOf="@+id/img_profile_image" android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="150dp" android:layout_marginEnd="150dp" android:layout_marginTop="14dp"
            android:layout_alignParentTop="true" android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:textSize="15sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="258dp"
            android:layout_height="22dp" android:id="@+id/txt_mensaje" android:layout_marginTop="6dp"
            android:layout_below="@+id/txt_nombre_usuario_chat" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="26dp" android:layout_marginEnd="26dp"
            android:layout_toEndOf="@+id/img_profile_image" android:layout_toRightOf="@+id/img_profile_image"
            android:layout_marginLeft="52dp" android:layout_marginStart="52dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_hora"
            android:layout_toEndOf="@+id/img_profile_image"
            android:layout_toRightOf="@+id/img_profile_image" android:layout_marginLeft="213dp"
            android:layout_marginStart="213dp" android:layout_marginTop="17dp" android:layout_alignParentTop="true"
            android:textSize="10sp"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/visto" android:id="@+id/img_visto"
            android:layout_toEndOf="@+id/img_profile_image" android:layout_toRightOf="@+id/img_profile_image"
            android:layout_marginLeft="29dp" android:layout_marginStart="29dp"
            android:layout_alignRight="@+id/txt_mensaje" android:layout_marginRight="271dp"
            android:layout_marginEnd="271dp" android:layout_alignEnd="@+id/txt_mensaje"
            android:layout_marginBottom="1dp" android:layout_alignBottom="@+id/txt_mensaje"/>
    <view
            class="android.view.View"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#E6E4E2"/>
</RelativeLayout>
